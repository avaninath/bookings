{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>This is the about page</h1>
            <p>This is coming from template: {{index .StringMap "test"}}</p>

            <p>

                {{if ne (index .StringMap "remote_ip") ""}}
                Your ip is {{index .StringMap "remote_ip"}}
                {{else}}
                I don't know your ip yet, Please visit the <a href="/">Home</a> to set it
                {{end}}
            </p>
        </div>
    </div>
</div>
{{end}}